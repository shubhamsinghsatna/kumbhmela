                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_margin="8dp"
                    app:cardElevation="4dp"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="8dp">

