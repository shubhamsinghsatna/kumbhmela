            android:layout_height="wrap_content"
            android:text="Maha Kumbh Main Dates"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/bhagwa"
            android:layout_margin="10dp"
            android:textSize="24sp"/>

