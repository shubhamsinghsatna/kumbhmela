<resources>

    <style name="CircularImageView" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item> <!-- Ensures the image is circular -->
    </style>
    <style name="Theme.YourAppName.BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.YourAppName.RoundedBottomSheet</item>
    </style>

    <style name="Widget.YourAppName.RoundedBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.RoundedTop</item>
    </style>

    <style name="ShapeAppearanceOverlay.RoundedTop" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
    </style>

</resources>
